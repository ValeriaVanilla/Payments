@model Payments.Models.payment

<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/all.min.css">
    <link rel="stylesheet" href="~/Content/PaymentUpdateStyle.css">
</head>
<body>
    <div class="container" style="margin-right: 6cm;">
        <h2><b>Modify Payment</b></h2>

        <div>
            @if (TempData["success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["sucess"]
                    <button type="button" class="close" data-dismiss="alert">
                        <span>&times;</span>
                    </button>
                </div>
            }
        </div>

        <form action="@Url.Action("ModifyPayment", "Payment")" method="post">

            <div>
                @Html.HiddenFor(model => model.ReferenceNo)
            </div>
            <div>
                <label>Amount</label>
                @Html.EditorFor(model => model.Amount)
            </div>
            <div>
                <label>Description</label>
                @Html.EditorFor(model => model.Description)
            </div>
            <div>
                <label>Beneficiary</label>
                @Html.EditorFor(model => model.Beneficiary)
            </div>
            <div>
                <button class="btn btn-success glyphicon glyphicon-ok" type="submit" title="Update Payment"></button>
            </div>           
        </form>
    </div>    

</body>
</html>
